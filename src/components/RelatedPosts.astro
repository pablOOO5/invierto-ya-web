---
import { Image } from 'astro:assets';
import BlogImage from './BlogImage.astro';

interface Post {
  slug: string;
  title: string;
  description: string;
  image: any;
  date: string;
  category: string;
  readTime: string;
}

interface Props {
  currentPost: Post;
  allPosts: Post[];
  maxPosts?: number;
}

// Función para obtener el color de la categoría
function getCategoryColor(category: string): string {
  const colors = {
    'Principiantes': 'bg-blue-600',
    'Educación': 'bg-green-600', 
    'Estrategias': 'bg-purple-600'
  };
  return colors[category as keyof typeof colors] || 'bg-blue-600';
}

const { currentPost, allPosts, maxPosts = 3 } = Astro.props;

// Filtrar posts relacionados por categoría (excluyendo el post actual)
const relatedPosts = allPosts
  .filter(post => 
    post.category === currentPost.category && 
    post.slug !== currentPost.slug
  )
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()) // Ordenar por fecha más reciente
  .slice(0, maxPosts);

// Si no hay suficientes posts de la misma categoría, agregar posts de otras categorías
if (relatedPosts.length < maxPosts) {
  const remainingSlots = maxPosts - relatedPosts.length;
  const otherCategoryPosts = allPosts
    .filter(post => 
      post.category !== currentPost.category && 
      post.slug !== currentPost.slug &&
      !relatedPosts.some(relatedPost => relatedPost.slug === post.slug)
    )
    .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
    .slice(0, remainingSlots);
  
  relatedPosts.push(...otherCategoryPosts);
}
---

{relatedPosts.length > 0 && (
  <section class="mt-16 pt-12 border-t border-gray-200">
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-gray-800 mb-2">
        Artículos Relacionados
      </h2>
      <p class="text-gray-600">
        Más contenido sobre <span class="text-blue-600 font-semibold">{currentPost.category}</span> y otros temas de inversión
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {relatedPosts.map((post) => (
        <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 group">
          <div class="relative overflow-hidden">
            <a href={`/blog/${post.slug}`} class="block">
              <BlogImage
                src={post.image}
                alt={post.title}
                width={400}
                height={240}
                class="w-full h-48 group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </a>
            <div class="absolute top-4 left-4">
              <span class={`${getCategoryColor(post.category)} text-white text-xs font-medium px-2 py-1 rounded-full`}>
                {post.category}
              </span>
            </div>
          </div>
          
          <div class="p-6">
            <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
              <time>{new Date(post.date).toLocaleDateString('es-ES', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}</time>
              <span>•</span>
              <span>{post.readTime}</span>
            </div>
            
            <h3 class="text-xl font-semibold text-gray-800 mb-3 group-hover:text-blue-600 transition-colors line-clamp-2">
              <a href={`/blog/${post.slug}`} class="hover:no-underline">
                {post.title}
              </a>
            </h3>
            
            <p class="text-gray-600 mb-4 line-clamp-3">
              {post.description}
            </p>
            
            <a 
              href={`/blog/${post.slug}`}
              class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors"
            >
              Leer más
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>
)}

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
