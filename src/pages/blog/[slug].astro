---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogImage from '../../components/BlogImage.astro';
import RelatedPosts from '../../components/RelatedPosts.astro';
import { getAllPosts, getPostBySlug } from '../../data/blogPosts';

export async function getStaticPaths() {
  const posts = getAllPosts();

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;
const allPosts = getAllPosts();
---

<BaseLayout 
  title={`${post.title} - Blog Invierto Ya`}
  description={post.description}
>
  <main class="min-h-screen bg-white">
    <!-- Header -->
    <header class="bg-white shadow-lg">
      <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
        <div class="text-2xl font-bold text-blue-600">
          <a href="/">Invierto Ya</a>
        </div>
        <div class="hidden md:flex space-x-6">
          <a href="/" class="text-gray-700 hover:text-blue-600 transition-colors">Inicio</a>
          <a href="/blog" class="text-blue-600 font-semibold">Blog</a>
          <a href="/sobre-mi" class="text-gray-700 hover:text-blue-600 transition-colors">Sobre Mí</a>
          <a href="/contacto" class="text-gray-700 hover:text-blue-600 transition-colors">Contacto</a>
        </div>
      </nav>
    </header>

    <!-- Breadcrumbs -->
    <div class="bg-gray-50 py-4">
      <div class="container mx-auto px-6">
        <nav class="text-sm">
          <a href="/" class="text-blue-600 hover:underline">Inicio</a>
          <span class="mx-2 text-gray-500">/</span>
          <a href="/blog" class="text-blue-600 hover:underline">Blog</a>
          <span class="mx-2 text-gray-500">/</span>
          <span class="text-gray-700">{post.title}</span>
        </nav>
      </div>
    </div>

    <!-- Article -->
    <article class="py-12">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <!-- Header del artículo -->
          <header class="mb-12">
            <div class="flex items-center gap-4 mb-6">
              <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full">
                {post.category}
              </span>
              <time class="text-gray-500">{post.date}</time>
              <span class="text-gray-500">•</span>
              <span class="text-gray-500">{post.readTime} lectura</span>
            </div>
            
            <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6 leading-tight">
              {post.title}
            </h1>
            
            <p class="text-xl text-gray-600 leading-relaxed">
              {post.description}
            </p>
          </header>

          <!-- Imagen destacada -->
          <div class="mb-12">
            <BlogImage 
              src={post.image}
              alt={post.title}
              class="w-full h-64 md:h-96 object-cover rounded-2xl shadow-lg"
            />
          </div>

          <!-- Contenido del artículo -->
          <div class="prose prose-lg prose-blue max-w-none">
            <div set:html={post.content}></div>
          </div>

          <!-- Entradas relacionadas -->
          <RelatedPosts currentPost={post} allPosts={allPosts} maxPosts={3} />

          <!-- Compartir y navegación -->
          <div class="mt-12 pt-8 border-t border-gray-200">
            <div class="flex flex-col md:flex-row justify-between items-center gap-6">
              <div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">Comparte este artículo</h3>
                <div class="flex space-x-4">
                  <a href="#" class="text-blue-600 hover:text-blue-800">Twitter</a>
                  <a href="#" class="text-blue-600 hover:text-blue-800">LinkedIn</a>
                  <a href="#" class="text-blue-600 hover:text-blue-800">Facebook</a>
                </div>
              </div>
              <a href="/blog" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors">
                ← Volver al Blog
              </a>
            </div>
          </div>
        </div>
      </div>
    </article>

    <!-- Newsletter CTA -->
    <section class="py-16 bg-gradient-to-r from-blue-600 to-blue-700">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          ¿Te gustó este artículo?
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          Suscríbete y recibe más contenido como este directo en tu email.
        </p>
        <a href="/#newsletter" class="bg-white text-blue-600 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-colors inline-block">
          Suscribirme al Newsletter
        </a>
      </div>
    </section>
  </main>
</BaseLayout>

<style is:global>
  /* Estilos para el contenido del blog */
  .prose {
    line-height: 1.75;
    color: #374151;
    font-size: 1.125rem;
  }
  
  .prose h2 {
    font-size: 2.25rem;
    font-weight: 700;
    color: #1f2937;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 0.75rem;
    line-height: 1.2;
  }
  
  .prose h3 {
    font-size: 1.875rem;
    font-weight: 700;
    color: #1f2937;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }
  
  .prose h4 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }
  
  .prose p {
    color: #374151;
    margin-bottom: 1.5rem;
    line-height: 1.8;
    font-size: 1.125rem;
  }
  
  .prose ul, 
  .prose ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }
  
  .prose ul {
    list-style-type: disc;
  }
  
  .prose ol {
    list-style-type: decimal;
  }
  
  .prose li {
    color: #374151;
    margin-bottom: 0.5rem;
    line-height: 1.7;
    font-size: 1.125rem;
  }
  
  .prose ul li {
    margin-bottom: 0.75rem;
  }
  
  .prose ol li {
    margin-bottom: 0.75rem;
  }
  
  .prose li::marker {
    color: #2563eb;
  }
  
  .prose strong {
    font-weight: 600;
    color: #111827;
  }
  
  .prose em {
    font-style: italic;
    color: #4b5563;
  }
  
  .prose blockquote {
    border-left: 4px solid #2563eb;
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #4b5563;
    background-color: #eff6ff;
    padding-top: 1rem;
    padding-bottom: 1rem;
    border-radius: 0 0.5rem 0.5rem 0;
  }
  
  .prose code {
    background-color: #f3f4f6;
    color: #2563eb;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-family: 'Monaco', 'Cascadia Code', 'Segoe UI Mono', monospace;
  }
  
  .prose pre {
    background-color: #1f2937;
    color: white;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .prose a {
    color: #2563eb;
    text-decoration: underline;
    transition: color 0.2s ease;
  }
  
  .prose a:hover {
    color: #1d4ed8;
  }
  
  /* Espaciado específico para listas anidadas */
  .prose ul ul, 
  .prose ol ol, 
  .prose ul ol, 
  .prose ol ul {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
  
  /* Mejores márgenes para el primer y último elemento */
  .prose > :first-child {
    margin-top: 0 !important;
  }
  
  .prose > :last-child {
    margin-bottom: 0 !important;
  }
  
  /* Espaciado mejorado después de encabezados */
  .prose h2 + p,
  .prose h3 + p,
  .prose h4 + p {
    margin-top: 0;
  }
  
  /* Espaciado antes de listas después de párrafos */
  .prose p + ul,
  .prose p + ol {
    margin-top: -0.5rem;
  }
</style>
